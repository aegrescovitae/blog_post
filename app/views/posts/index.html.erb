<h1>ALL POSTS</h1>

<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <h3><%= post.author %></h3>
  <p><%= post.body %></p>
  <%= link_to 'Show Post', post_path(post) %> |
  <%= link_to 'Edit Post', edit_post_path(post) %> |
  <%= link_to 'Delete Post', post_path(post), method: :delete %> |
  <%= link_to 'New Post', new_post_path %>
<% end %>

